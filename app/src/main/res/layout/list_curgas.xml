<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="1dp"
    android:paddingTop="1dp"
    android:paddingBottom="1dp">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="@dimen/profile_picture_width"
            android:layout_height="@dimen/profile_picture_height"
            android:id="@+id/profilePictureCurgas"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="4dp"
            android:layout_marginStart="14dp"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textNamaCurgas"
            android:text="Nama"
            android:textSize="@dimen/text_nama"
            android:layout_alignWithParentIfMissing="false"
            android:layout_alignTop="@+id/profilePictureCurgas"
            android:layout_toRightOf="@+id/profilePictureCurgas"
            android:layout_toEndOf="@+id/profilePictureCurgas"
            android:layout_marginLeft="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/textUsernameCurgas"
            android:text="(Username)"
            android:enabled="false"
            android:textSize="@dimen/text_username"
            android:layout_gravity="center_vertical"
            android:textStyle="italic"
            android:layout_below="@+id/textNamaCurgas"
            android:layout_alignLeft="@+id/textNamaCurgas"
            android:layout_alignStart="@+id/textNamaCurgas" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Waktu"
            android:id="@+id/textWaktuCurgas"
            android:enabled="false"
            android:textSize="@dimen/text_waktu"
            android:layout_below="@+id/textUsernameCurgas"
            android:layout_alignLeft="@+id/textUsernameCurgas"
            android:layout_alignStart="@+id/textUsernameCurgas" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Judul"
            android:id="@+id/textJudulCurgas"
            android:textStyle="bold"
            android:layout_marginLeft="4dp" />

        <com.android.volley.toolbox.NetworkImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/imageIsiCurgas"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="isi singkat"
            android:id="@+id/textIsiSingkatCurgas"
            android:layout_marginLeft="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Terakhir dikomentari oleh "
            android:textSize="@dimen/text_terakhir_komentar"
            android:gravity="left"
            android:textIsSelectable="false"
            android:textStyle="italic"
            android:enabled="false"
            android:id="@+id/textTerakhirKomentarCurgas"
            android:layout_marginLeft="4dp" />

    </LinearLayout>


</LinearLayout>